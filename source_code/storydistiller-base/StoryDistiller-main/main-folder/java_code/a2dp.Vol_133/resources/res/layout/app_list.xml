<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/m_et_search" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxLines="1" android:layout_weight="1" android:inputType="text" android:imeOptions="actionUnspecified" android:imeActionLabel="Search"/>
        <Button android:layout_gravity="center_vertical" android:id="@+id/m_btn_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="Search"/>
        <Button android:layout_gravity="center_vertical" android:id="@+id/m_btn_clear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="Clear"/>
    </LinearLayout>
    <ListView android:id="@+id/m_lv_packages" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
